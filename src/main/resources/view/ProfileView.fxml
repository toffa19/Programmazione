<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.progetto.view.ProfileController"
            stylesheets="@../assets/styles/home.css"
            prefWidth="800" prefHeight="600">

    <!-- NAV BAR -->
    <top>
        <HBox styleClass="card-container header-card" alignment="CENTER_LEFT" spacing="20">
            <padding><Insets top="10" right="20" bottom="10" left="20"/></padding>
            <Button fx:id="homeButton" text="🏠 Home" styleClass="btn-nav"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="logoutButton" text="🔒 Logout" styleClass="btn-nav"/>
        </HBox>
    </top>

    <!-- BODY: Profile Card al centro -->
    <center>
        <VBox alignment="CENTER" spacing="30">
            <VBox styleClass="card-container" spacing="20" alignment="CENTER">
                <padding><Insets top="30" right="40" bottom="30" left="40"/></padding>

                <!-- Avatar e Nome -->
                <ImageView fx:id="profileImage" fitWidth="100" fitHeight="100"
                           styleClass="avatar-large"/>
                <Label fx:id="fullNameLabel" text="Nome Utente" styleClass="header-title"/>

                <!-- Dati di Contatto -->
                <GridPane hgap="15" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="30"/>
                        <ColumnConstraints percentWidth="70"/>
                    </columnConstraints>

                    <Label text="Email:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <Label fx:id="emailLabel" text="email@example.com" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Username:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="usernameField" promptText="username" disable="true" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Nome:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextField fx:id="fullNameField" promptText="Nome completo" disable="true" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Nazione:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <TextField fx:id="countryField" promptText="Nazione" disable="true" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <Label text="Lingua:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="languageComboBox" disable="true" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                    <Label text="Password:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                    <PasswordField fx:id="currentPasswordField" promptText="Password attuale" disable="true" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                    <Label text="Nuova Password:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                    <PasswordField fx:id="newPasswordField" promptText="Inserisci nuova pass" disable="true" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
                </GridPane>

                <!-- Pulsanti -->
                <HBox spacing="20" alignment="CENTER">
                    <Button fx:id="editButton" text="✏️ Modifica" styleClass="btn-secondary"/>
                    <Button fx:id="saveButton" text="💾 Salva" styleClass="btn-primary" disable="true"/>
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>
