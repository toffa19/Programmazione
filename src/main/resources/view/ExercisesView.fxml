<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns="http://javafx.com/javafx/17.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.progetto.view.ExercisesController">
    <!-- Header con il nome del topic -->
    <top>
        <Label fx:id="topicLabel" text="Topic Name" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 10;"/>
    </top>

    <!-- PATH a sinistra: elenco domande -->
    <left>
        <ListView fx:id="pathListView" style="-fx-pref-width: 200;" />
    </left>

    <!-- CENTRO: area con la domanda corrente -->
    <center>
        <ScrollPane fx:id="scrollPane" fitToWidth="true" style="-fx-background: transparent;">
            <content>
                <VBox fx:id="questionContainer" spacing="10" style="-fx-padding: 20;">
                    <!-- VerrÃ  popolato dinamicamente con la domanda e le opzioni -->
                </VBox>
            </content>
        </ScrollPane>
    </center>

    <!-- (opzionale) Footer -->
    <!--
    <bottom>
        ...
    </bottom>
    -->
</BorderPane>
