<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.progetto.view.PathController"
            stylesheets="@/assets/styles/path.css">

    <!-- HEADER -->
    <top>
        <HBox spacing="10" style="-fx-background-color:#f2f2f2; -fx-padding:10;" alignment="CENTER_LEFT">
            <Label fx:id="homeButton"
                   text="Home"
                   style="-fx-font-size:14px; -fx-cursor:hand;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <ImageView fx:id="profileIcon"
                       fitWidth="24" fitHeight="24"
                       style="-fx-cursor:hand;"/>
        </HBox>
    </top>

    <!-- CENTER -->
    <center>
        <AnchorPane>
            <!-- Path drawing pane -->
            <Pane fx:id="pathPane"
                  AnchorPane.topAnchor="0.0"
                  AnchorPane.bottomAnchor="0.0"
                  AnchorPane.leftAnchor="0.0"
                  AnchorPane.rightAnchor="0.0"/>
            <!-- Floating marker -->
            <Label fx:id="marker"
                   text="â—‰"
                   visible="false"
                   mouseTransparent="true"
                   style="-fx-font-size:20px; -fx-text-fill:#4CAF50;"
                   AnchorPane.leftAnchor="0.0"
                   AnchorPane.topAnchor="0.0"/>
        </AnchorPane>
    </center>
</BorderPane>
