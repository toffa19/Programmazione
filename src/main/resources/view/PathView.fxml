<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.progetto.view.PathController"
            stylesheets="@/assets/styles/path.css">

    <!-- HEADER (Top) con HBox -->
    <top>
        <HBox spacing="20" alignment="CENTER_LEFT" style="-fx-background-color: #f2f2f2;">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>
            <!-- Titolo della pagina -->
            <Label text="Percorso" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <!-- Spazio elastico -->
            <HBox HBox.hgrow="ALWAYS"/>
            <!-- Icona profilo -->
            <ImageView fx:id="profileIcon" fitWidth="24" fitHeight="24" />
        </HBox>
    </top>

    <!-- Sezione Sinistra: Visualizzazione del Path -->
    <left>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <content>
                <VBox fx:id="pathContainer" spacing="20" style="-fx-padding: 20;">
                    <!-- VerrÃ  popolato dinamicamente con i "nodi" del percorso -->
                </VBox>
            </content>
        </ScrollPane>
    </left>

    <!-- Sezione Destra: Dettaglio del topic selezionato -->
    <center>
        <VBox fx:id="topicDetailContainer" spacing="10" style="-fx-padding: 20;">
            <!-- Mostriamo nome, descrizione e magari un'immagine -->
            <Label fx:id="topicNameLabel" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
            <Label fx:id="topicDescriptionLabel" wrapText="true"/>
            <Label fx:id="lessonCountLabel" style="-fx-font-size: 14px;"/>
            <Label fx:id="practiceCountLabel" style="-fx-font-size: 14px;"/>
            <!-- Pulsante o informazioni aggiuntive -->
            <Label text="(Altre info o pulsanti vanno qui)"/>
        </VBox>
    </center>

    <!-- Footer (opzionale) -->
    <bottom>
        <Label text="Footer" style="-fx-background-color: #f2f2f2; -fx-padding: 10;"/>
    </bottom>
</BorderPane>
