<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.progetto.view.SignUpController"
            prefWidth="400" prefHeight="450"
            stylesheets="@../assets/styles/home.css">

    <center>
        <VBox spacing="15" alignment="CENTER">
            <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

            <Label text="Registrazione" styleClass="header-title"/>

            <TextField fx:id="nameField"      promptText="Nome" />
            <TextField fx:id="usernameField"  promptText="Username" />
            <PasswordField fx:id="passwordField"        promptText="Password" />
            <PasswordField fx:id="confirmPasswordField" promptText="Conferma Password" />

            <!-- NUOVA SEZIONE: scelta del ruolo -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Seleziona ruolo:"/>
                <RadioButton fx:id="studentRadio" text="Studente" />
                <RadioButton fx:id="editorRadio"  text="Editor"   />
            </HBox>

            <Button fx:id="signUpButton"    text="✏️ Registrati"   styleClass="btn-action-large"/>
            <Button fx:id="goToLoginButton" text="↩️ Vai al Login" styleClass="btn-secondary"/>
        </VBox>
    </center>
</BorderPane>
